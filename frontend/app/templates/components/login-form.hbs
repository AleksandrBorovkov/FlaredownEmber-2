{{#form-for onSubmit="authenticateWithDevise"}}
  <div class="form-field">
    <label for="identification">Email</label>
    {{input value=identification placeholder='Enter Email' class='form-control'}}
  </div>
  <div class="form-field">
    <label for="password">Password</label>
    {{input value=password placeholder='Enter Password' class='form-control' type='password'}}
  </div>
  <p>
    Early access is open to <a href="http://igg.me/at/flaredown">Flaredown backers</a>.
    If you are a backer and you have not received an email invite, <a href="mailto:contact@flaredown.com">contact us</a>.
  </p>
  {{input type="submit" class="btn btn-default right" value="Login"}}
{{/form-for}}

{{#if errorMessage}}
  <div class="alert alert-danger">
    <p>
      <strong>Login failed:</strong> <code>{{errorMessage}}</code>
    </p>
  </div>
{{/if}}
<a {{action 'authenticateWithFacebook'}} class="btn btn-default" style="cursor: pointer;">Login with Facebook</a>
<br>
{{#link-to 'password.reset'}}Forgot password{{/link-to}}
