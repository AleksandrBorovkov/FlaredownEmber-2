{{partial "components/checkin/step-header"}}

{{checkin/multi-select-edit
  objects=relatedObjects
  modelName=modelName
  selectedTag=selectedObject
  onClicked=(action "remove")
  onSelected=(action "add")
}}

{{multi-group
  scope="most_popular"
  title="Popular"
  modelName=modelName
  onTagClicked=(action "add")
}}
<br>
{{multi-group
  scope="most_recent"
  title="Recent"
  modelName=modelName
  onTagClicked=(action "add")
}}

{{#unless embeddedInSummary}}
  {{step-controls
    step=model.currentStep
    forwardLabel=forwardLabel
    onBackward=(action "goBack")
    onForward=(action "completeStep")
  }}
{{/unless}}
