<ul>
  {{#each tags as |tag|}}
    <li class="checkin-tag" {{action "clicked" tag}}>
      <img class="checkin-tag-pointer" src="/assets/tag-point.svg">
      <div class="checkin-tag-text">{{tag.name}}</div>
    </li>
  {{/each}}
</ul>

{{#power-select-with-create search=(action "searchTags")
                            onchange=(action "handleChange")
                            oncreate=(action "createTag")
                            showCreateWhen=(action "shouldShowCreateOption")
                            placeholder=selectPlaceholder
                            onfocus=(action "handleFocus")
                            onblur=(action "handleBlur")
                            renderInPlace=true
                            as |tag| }}
  {{tag.name}}
{{/power-select-with-create}}
