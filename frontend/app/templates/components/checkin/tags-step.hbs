{{partial "components/checkin/step-header"}}

{{checkin/tags-edit tags=checkin.tags
                    selectedTag=selectedTag
                    onClicked=(action "remove")
                    onSelected=(action "add") }}

{{tags-group scope="most_popular"
             title="Popular"
             onTagClicked=(action "add") }}

{{#unless embeddedInSummary}}
  {{step-controls step=model.currentStep
                  forwardLabel="Review"
                  onBackward=(action "goBack")
                  onForward=(action "completeStep") }}
{{/unless}}
