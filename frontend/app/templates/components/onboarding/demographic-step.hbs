{{#form-for for=profile}}

  {{#form-field for="ethnicities"
                label="Ethnic Origin"}}
    {{#power-select-multiple options=ethnicities
                             placeholder="Select all that apply"
                             selected=profile.ethnicities
                             onchange=(action (mut profile.ethnicities))
                             renderInPlace=true
                             searchEnabled=false
                             class="fs-private" as |ethnicity| }}
      {{ethnicity.name}}
    {{/power-select-multiple}}
  {{/form-field}}

  {{#form-field for="dayHabit"
                label="How you spend most of your day?"}}
    {{select-field resource="dayHabit" async=false
                   selection=profile.dayHabit
                   placeholder="Select one option"
                   optionComponent="enum-select-option"
                   class="fs-private"}}
  {{/form-field}}

  {{#form-field for="educationLevel"
                label="Highest level of education completed"}}
    {{#power-select options=educationLevels
                    placeholder="Select one option"
                    selected=profile.educationLevel
                    onchange=(action (mut profile.educationLevel))
                    renderInPlace=true
                    searchEnabled=false
                    class="fs-private" as |educationLevel| }}
      {{educationLevel.name}}
    {{/power-select}}
  {{/form-field}}

  {{#form-field for="dayWalkingHours"
                label="How many hours a day do you spend walking or exercising, on average?"}}
    {{input type="number" value=profile.dayWalkingHours class="fs-private"}}
  {{/form-field}}

{{/form-for}}

{{step-controls step=model.currentStep
                onBackward=(action "goBack")
                onForward=(action "completeStep") }}
