{{#form-for for=model onSubmit="acceptInvitation"}}

  {{#form-field for="email" label="Email"}}
    {{input value=model.email placeholder="Email"}}
  {{/form-field}}

  {{#form-field for="password" label="Password"}}
    {{input type="password" value=model.password placeholder="Password"}}
  {{/form-field}}

  {{input type="submit" value="Unlock early access"}}
{{/form-for}}
