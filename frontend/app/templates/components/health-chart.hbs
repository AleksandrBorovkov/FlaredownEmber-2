<svg width='100%' height={{SVGHeight}}>
  <g class="health-chart-viewport">
    {{#if chartLoaded }}
      {{#each series.conditions as |condition|}}
        {{chart/g-trackable model=condition.model index=condition.index}}
      {{/each}}

      {{#each series.symptoms as |symptom|}}
        {{chart/g-trackable model=symptom.model index=symptom.index}}
      {{/each}}

      {{#each series.treatments as |treatment|}}
        {{chart/g-trackable model=treatment.model index=treatment.index}}
      {{/each}}

      {{chart/g-timeline  onDateClicked=(action "setCurrentDate")
                          oneMouseHover=(action "openInfoWindow")
                          onMouseLeave=(action "closeInfoWindow")}}
    {{/if}}
  </g>

  {{#if openInfoWindow }}
    <line x1="{{xPosition}}" y1="0" x2="{{xPosition}}" y2="{{totalSeriesHeight}}" class="vertical-line" />
  {{/if}}
</svg>
<img class="trans-pixel" src="/assets/trans-pixel.png">
